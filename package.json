{
  "name": "TrueLazer",
  "version": "0.0.4",
  "description": "development build",
  "main": "main.js",
  "scripts": {
    "start-renderer": "vite",
    "start": "concurrently --kill-others \"npm run start-renderer\" \"cross-env NODE_ENV=development electron .\"",
    "build-native": "node-gyp rebuild --directory native",
    "postinstall": "npm run build-native",
    "build": "vite build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.truelazer.app",
    "productName": "TrueLazer",
    "copyright": "Copyright Â© 2026 ${author}",
    "directories": {
      "output": "release/",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "main/**/*",
      "preload.js",
      "src/favicon.ico",
      "src/**/*",
      "dist/**/*",
      "native/build/Release/ndi_wrapper.node",
      "native/build/Release/Processing.NDI.Lib.x64.dll"
    ],
    "extraFiles": [
      {
        "from": "src/",
        "to": "Mappings",
        "filter": [
          "*Mappings.json"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "src/ILDA-FILE-FORMAT-FILES",
        "to": "ILDA-FILES"
      },
      {
        "from": "src/fonts",
        "to": "fonts"
      }
    ],
    "asarUnpack": [
      "**/*.node",
      "**/*.dll"
    ],
    "win": {
      "icon": "src/favicon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    }
  },
  "keywords": [],
  "author": "Kevin Bahr (MAXQON)",
  "license": "Source Available",
  "type": "module",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.4"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@laser-dac/core": "^0.4.2",
    "@laser-dac/ether-dream": "^0.4.2",
    "@mui/material": "^7.3.2",
    "bindings": "^1.5.0",
    "bootstrap-icons": "^1.13.1",
    "dmxnet": "^0.9.0",
    "electron-store": "^11.0.2",
    "font-list": "^2.0.1",
    "get-system-fonts": "^2.0.2",
    "node-addon-api": "^8.5.0",
    "opentype.js": "^1.3.4",
    "osc": "^2.4.5",
    "pidusage": "^4.0.1",
    "ps-tree": "^1.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "webmidi": "^3.1.14"
  }
}
